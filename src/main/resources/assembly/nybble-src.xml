<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>App</id>
  <includeBaseDirectory>true</includeBaseDirectory>
  <!-- Export Nybble Analytics in following archive format -->
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
    <format>tar.bz2</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/config</directory>
      <outputDirectory>/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/MISPMaps</directory>
      <outputDirectory>/mapping/misp-map</outputDirectory>
      <!-- Include only MISP Map JSON file and not backup files for packaging -->
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/SigmaMaps</directory>
      <outputDirectory>/mapping/sigma-maps</outputDirectory>
      <!-- Exclude all existing maps for packaging -->
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/SigmaRules</directory>
      <outputDirectory>/rules</outputDirectory>
      <!-- Exclude rules from dev environment for packaging -->
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/resources/logs</directory>
      <outputDirectory>/logs</outputDirectory>
      <!-- Exclude already existing logs from dev environment for packaging -->
      <includes>
        <include>**</include>
      </includes>
      <excludes>
        <exclude>**/*.log</exclude>
        <exclude>**/*.log.*</exclude>
      </excludes>
    </fileSet>

  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>NybbleAnalytics</destName>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/sigma_ECS_fields_map.json</source>
      <outputDirectory>/mapping/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/elastic-mapping-file/nybble-template.json</source>
      <outputDirectory>/mapping/elasticsearch-map/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/log4j.properties</source>
      <outputDirectory>/conf</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <excludes>
        <exclude>${project.groupId}:${project.artifactId}:jar:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
